<% include ../partials/header %>
<div class="container">
	<header>
		<h2>Ntalk - Agenda de contatos</h2>
	</header>
	<section>
		<form action="/contato" method="post">
			<div class="form-group">
				<input type="text" name="contato[nome]" placeholder="Nome" class="form-control" />
			</div>
			<div class="form-group">
				<input type="text" name="contato[email]" placeholder="Email" class="form-control" />
			</div>
			<div class="form-group">
			<button class="btn btn-success">Enviar</button>
			</div>
		</form>
		<hr />
		<table class="table">
			<thead>
				<tr>
					<th>Nome</th>
					<th>Email</th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<% contatos.forEach(function(contato, index) { %>
				<tr>
					<td><%- contato.nome %></td>
					<td><%- contato.email %></td>
					<td>
						<a href="/contato/<%- index %>">Detalhes</a>
						<a href="/chat">Conversar</a>
					</td>
				</tr>
				<% }) %>
			</tbody>
		</table>
	</section>
</div>
<% include ../partials/footer %>